@page
@model HairSalon.RazorPage.Pages.Feedback.ServiceFeedBackModel

@{
    ViewData["Title"] = "Service Feedback";
}

<style>
    /* General styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fc;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #444;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .custom-dropdown {
        position: relative;
        display: inline-block;
        width: 100%;
        max-width: 350px;
        margin: 0 auto;
    }

    .selected-item {
        background-color: #f8f8f8;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s ease;
    }

        .selected-item:hover {
            background-color: #e9e9e9;
        }

    .dropdown-list {
        position: absolute;
        width: 100%;
        border: 1px solid #ccc;
        background-color: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        z-index: 1;
        display: none;
        border-radius: 4px;
        margin-top: 5px;
    }

    .dropdown-item {
        padding: 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
    }

        .dropdown-item:hover {
            background-color: #f0f0f0;
        }

    .service-image {
        width: 25px;
        height: 25px;
        margin-right: 10px;
        border-radius: 50%;
    }

    .pagination {
        text-align: center;
        margin-top: 20px;
    }

        .pagination a {
            margin: 0 8px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            padding: 8px 16px;
            border-radius: 4px;
            border: 1px solid #007bff;
            transition: all 0.3s ease;
        }

            .pagination a:hover {
                background-color: #007bff;
                color: white;
                border-color: #0056b3;
            }

    .feedback-list {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        margin-top: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .feedback-list ul {
            list-style-type: none;
            padding: 0;
        }

        .feedback-list li {
            padding: 15px;
            border-bottom: 1px solid #f1f1f1;
            margin-bottom: 10px;
            font-size: 14px;
            background-color: #f9f9f9;
            border-radius: 6px;
        }

            .feedback-list li:last-child {
                border-bottom: none;
            }

    .feedback-rating {
        font-weight: bold;
        color: #ff9800;
    }

    .feedback-comment {
        color: #555;
    }

    .no-feedback {
        text-align: center;
        color: #999;
        font-size: 16px;
    }

    /* Go Back Button */
    .go-back-btn {
        display: inline-block;
        margin-top: 20px;
        text-decoration: none;
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .go-back-btn:hover {
            background-color: #0056b3;
        }

    h2 {
        color: #3f51b5;
        border-bottom: 2px solid #3f51b5;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <!-- Service Selection Dropdown -->
    <div class="form-group">
        <label for="serviceDropdown">Select a Service:</label>
        <div id="serviceDropdown" class="custom-dropdown">
            <div class="selected-item" onclick="toggleDropdown()">
                @(Model.Services.FirstOrDefault(s => s.Id == Model.ServiceId)?.Name ?? "-- Select a Service --")
                <i class="fa fa-caret-down"></i>
            </div>
            <ul class="dropdown-list" style="display:none;">
                @foreach (var service in Model.Services)
                {
                    <li class="dropdown-item" onclick="selectService('@service.Id', '@service.Name')">
                        <img src="@service.ServiceImage" alt="Service Image" class="service-image" />
                        <span>@service.Name</span>
                    </li>
                }
            </ul>
        </div>
    </div>
    <input type="hidden" id="selectedServiceId" name="serviceDropdown" value="@Model.ServiceId" />

    <script>
        function toggleDropdown() {
            var dropdownList = document.querySelector('.dropdown-list');
            dropdownList.style.display = dropdownList.style.display === 'none' ? 'block' : 'none';
        }

        function selectService(serviceId, serviceName) {
            document.querySelector('.selected-item').innerHTML = `${serviceName} <i class="fa fa-caret-down"></i>`;
            document.getElementById('selectedServiceId').value = serviceId;
            document.querySelector('.dropdown-list').style.display = 'none';

            // Redirect to the same page with selected serviceId as query parameter
            window.location.href = `?serviceId=${serviceId}`;
        }
    </script>

    <!-- Feedback List Section -->
    <div id="feedbackList" class="feedback-list">
        @if (Model.Feedbacks != null && Model.Feedbacks.Items.Any())
        {
            <h3>PREVIOUS FEEDBACK FOR THE SERVICE</h3>
            <ul>
                @foreach (var feedback in Model.Feedbacks.Items)
                {
                    <li>
                        <div class="feedback-rating">Rating: @feedback.Rate</div>
                        <div class="feedback-comment">Comment: @feedback.Comment</div>
                    </li>
                }
            </ul>

            <!-- Pagination Controls -->
            <div class="pagination">
                <span>Page @Model.PageNumber</span>
                <div style="margin-left: 200px;">
                    @if (Model.Feedbacks.HasPreviousPage)
                    {
                        <a href="?serviceId=@Model.ServiceId&pageNumber=@(Model.PageNumber - 1)">Previous</a>
                    }
                    @if (Model.Feedbacks.HasNextPage)
                    {
                        <a href="?serviceId=@Model.ServiceId&pageNumber=@(Model.PageNumber + 1)">Next</a>
                    }
                </div>
            </div>
        }
        else
        {
            <p class="no-feedback">No feedback available for this service yet.</p>
        }
    </div>
    <a href="~/Feedbacks" class="go-back-btn" style="margin-left: 280px;">Back to Feedback List</a>
</div>

