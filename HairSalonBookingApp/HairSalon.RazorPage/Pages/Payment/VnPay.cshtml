@page
@model HairSalon.RazorPage.Pages.Payment.VnPayModel
@{
    ViewData["Title"] = "Create VnPay Payment";
}

<style>
    /* Main form styling */
    form {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    /* Page heading */
    h2 {
        text-align: center;
        color: #333;
    }

    /* Label and select styling */
    label {
        font-weight: bold;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
    }

        /* Select focus effect */
        select:focus {
            border-color: #007bff;
            outline: none;
        }

    /* Submit button styling */
    .btn-vnpay {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
        font-weight: bold;
    }

        /* Button hover effect */
        .btn-vnpay:hover {
            background-color: #0056b3;
        }

    /* Alert message styling */
    .alert {
        margin-top: 10px;
        padding: 10px;
        border-radius: 4px;
        font-size: 14px;
        text-align: center;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
</style>

<h2>Create New Payment</h2>

@if (TempData["DeniedMessage"] != null)
{
    <div class="alert alert-danger">@TempData["DeniedMessage"]</div>
}
else
{
    <h2>VNPay Payment</h2>

    <form method="post" asp-page-handler="PayWithVnPay">
        <div>
            <label for="appointmentId">Select Appointment:</label>
            <select id="appointmentId" name="Id" required>
                <option value="">-- Select Appointment --</option>
                @foreach (var appointment in Model.Appointments)
                {
                    <option value="@appointment.Id">@appointment.Id</option>
                }
            </select>
        </div>
        <button type="submit" class="btn-vnpay">Submit to VNPay</button>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }
}
