@page
@model HairSalon.RazorPage.Pages.SalaryPayments.ExportExcelModel
@using HairSalon.ModelViews.ApplicationUserModelViews
@{
    ViewData["Title"] = "Export Salary Payment";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        padding: 20px;
        line-height: 1.5;
    }

    h2 {
        color: #3f51b5;
        margin-bottom: 20px;
        border-bottom: 2px solid #3f51b5;
        padding-bottom: 10px;
        text-align: center;
    }

    .details-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto 30px;
        transition: transform 0.2s;
    }

        .details-container p {
            font-size: 16px;
            line-height: 1.6;
        }

            .details-container p strong {
                color: #3f51b5;
            }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    input[type="date"],
    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

        input[type="date"]:hover,
        input[type="text"]:hover {
            border-color: #3f51b5;
        }

    button[type="submit"] {
        padding: 12px 20px;
        border-radius: 4px;
        background-color: #d9534f;
        color: #fff;
        font-size: 16px;
        border: none;
        width: 100%;
        max-width: 200px;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

        button[type="submit"]:hover {
            background-color: #c9302c;
            transform: translateY(-2px);
        }

    .btn-cancel {
        padding: 12px 20px;
        border-radius: 4px;
        background-color: #5bc0de;
        color: #fff;
        font-size: 16px;
        text-decoration: none;
        width: 100%;
        max-width: 200px;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

        .btn-cancel:hover {
            background-color: #31b0d5;
            transform: translateY(-2px);
            color: #fff;
        }

    .alert-danger,
    .alert-success {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        padding: 15px;
        border-radius: 5px;
        margin-top: 20px;
        text-align: center;
        font-size: 1.1em;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

</style>

@if (TempData["DeniedMessage"] != null)
{
    <div class="alert-danger mt-3">@TempData["DeniedMessage"]</div>
}
else
{
    <h2>Export Salary Payment</h2>

    <div class="details-container">
        <form method="post">
            <label for="paymentDate"><strong>Export Date:</strong></label>
            <input type="date" id="paymentDate" name="PaymentDate" value="@Model.PaymentDate" />

            <div class="form-group">
                <label asp-for="SalaryPayment.UserId">User ID</label>
                <select asp-for="SalaryPayment.UserId" class="form-control">
                    <option value="">Select a Stylist</option>
                    @if (ViewData["Stylists"] != null && ((List<AppUserModelView>)ViewData["Stylists"]).Any())
                    {
                        @foreach (var stylist in (List<AppUserModelView>)ViewData["Stylists"])
                        {
                            <option value="@stylist.Id">@stylist.FullName</option>
                        }
                    }
                    else
                    {
                        <p>No stylists found.</p>
                    }
                </select>
                <span asp-validation-for="SalaryPayment.UserId" class="text-danger"></span>
            </div>


            <button type="submit">Export</button>
            <a asp-page="/SalaryPayments/Index" class="btn-cancel">Cancel</a>
        </form>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["ResponseMessage"] != null)
    {
        <div class="alert-success">@TempData["ResponseMessage"]</div>
    }
}
