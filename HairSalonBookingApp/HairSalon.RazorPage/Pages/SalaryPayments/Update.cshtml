@page
@model HairSalon.RazorPage.Pages.SalaryPayments.UpdateModel
@using HairSalon.ModelViews.ApplicationUserModelViews
@{
	ViewData["Title"] = "Update Salary Payment";
}

<style>
	/* General Layout */
	body {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background-color: #f8f9fa;
		color: #333;
		padding: 30px;
		line-height: 1.6;
	}

	h2 {
		color: #3f51b5;
		margin-bottom: 25px;
		border-bottom: 3px solid #3f51b5;
		padding-bottom: 10px;
		text-align: center;
		font-size: 24px;
	}

	/* Form Layout */
	form {
		background-color: #fff;
		padding: 30px;
		border-radius: 8px;
		box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
		max-width: 600px;
		margin: 0 auto;
	}

		form div {
			margin-bottom: 20px;
		}

	label {
		font-weight: bold;
		display: block;
		margin-bottom: 8px;
		font-size: 14px;
	}

	input[type="text"],
	input[type="hidden"],
	input[type="date"] {
		width: 100%;
		padding: 12px;
		font-size: 14px;
		border: 1px solid #ddd;
		border-radius: 5px;
		box-sizing: border-box;
		transition: border-color 0.3s ease;
	}

		input[type="text"]:focus,
		input[type="date"]:focus {
			border-color: #3f51b5;
			outline: none;
		}

	.text-danger {
		color: #d9534f;
		font-size: 12px;
		margin-top: 5px;
	}

	/* Button Styling */
	button[type="submit"], .btn-cancel {
		display: inline-block;
		width: calc(50% - 5px);
		padding: 11px;
		margin-top: 9px;
		font-size: 13px;
		font-weight: bold;
		color: #ffffff;
		border-radius: 5px;
		border: none;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	button[type="submit"] {
		background-color: #3f51b5;
	}

		button[type="submit"]:hover {
			background-color: #2c3e91;
		}

	.btn-cancel {
		background-color: darkgray;
		color: #333;
		margin-top: 10px;
		text-align: center;
		text-decoration: none;
		display: inline-block;
	}

		.btn-cancel:hover {
			background-color: #999;
			color: #333;
		}

	/* Error Message Styling */
	.alert {
		padding: 12px;
		border-radius: 5px;
		margin-top: 20px;
		font-size: 14px;
		text-align: center;
	}

	.alert-danger {
		background-color: #f8d7da;
		color: #721c24;
		border: 1px solid #f5c6cb;
	}
</style>

@if (TempData["DeniedMessage"] != null)
{
	<div class="alert alert-danger mt-3 text-center">@TempData["DeniedMessage"]</div>
}
else
{
	<h2>@ViewData["Title"]</h2>

	<form method="post">
		<input type="hidden" asp-for="Id" />

		<div>
			<label>Salary Payment ID:</label>
			<p>@Model.Id</p>
		</div>

		<div class="form-group">
			<label asp-for="SalaryPayment.UserId">User ID</label>
			<select asp-for="SalaryPayment.UserId" class="form-control" required>
				<option value="">Select a Stylist</option>
				@if (ViewData["Stylists"] != null && ((List<AppUserModelView>)ViewData["Stylists"]).Any())
				{
					@foreach (var stylist in (List<AppUserModelView>)ViewData["Stylists"])
					{
						<option value="@stylist.Id">@stylist.FullName</option>
					}
				}
				else
				{
					<p>No stylists found.</p>
				}
			</select>
			<span asp-validation-for="SalaryPayment.UserId" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="UpdatedSalary.BaseSalary">Base Salary</label>
			<input asp-for="UpdatedSalary.BaseSalary" placeholder="Enter Base Salary" required />
			<span asp-validation-for="UpdatedSalary.BaseSalary" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="UpdatedSalary.PaymentDate">Payment Date</label>
			<input asp-for="UpdatedSalary.PaymentDate" type="date" required />
			<span asp-validation-for="UpdatedSalary.PaymentDate" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="UpdatedSalary.DayOffPermitted">Day Off Permitted</label>
			<input asp-for="UpdatedSalary.DayOffPermitted" placeholder="Enter Days Off Permitted" required />
			<span asp-validation-for="UpdatedSalary.DayOffPermitted" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="UpdatedSalary.DayOffNoPermitted">Day Off Not Permitted</label>
			<input asp-for="UpdatedSalary.DayOffNoPermitted" placeholder="Enter Days Off Not Permitted" required />
			<span asp-validation-for="UpdatedSalary.DayOffNoPermitted" class="text-danger"></span>
		</div>

		<button type="submit">Save Changes</button>

		<a asp-page="/SalaryPayments/Index" class="btn-cancel">Cancel</a>
	</form>

	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
	}
}
