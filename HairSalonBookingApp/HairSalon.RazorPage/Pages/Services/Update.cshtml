@page
@model HairSalon.RazorPage.Pages.Service.UpdateModel
@{
    ViewData["Title"] = "Update Service";
}

<style>
    /* General Layout */
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #3f51b5;
        border-bottom: 2px solid #3f51b5;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    /* Form Layout */
    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto;
    }

        form div {
            margin-bottom: 15px;
        }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="hidden"] {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

        input[type="text"]:focus {
            border-color: #3f51b5;
            outline: none;
        }

    /* Button Styling */
    button[type="submit"],
    .btn-cancel {
        padding: 10px 20px;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button[type="submit"] {
        background-color: #3f51b5;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #2c3e91;
        }

    .btn-cancel {
        background-color: #ccc;
        color: #333;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #999;
        }

    /* Error Message Styling */
    .alert {
        padding: 10px;
        border-radius: 4px;
        margin-top: 15px;
        font-size: 14px;
        text-align: center;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* Validation Message */
    .text-danger {
        color: #d9534f;
        font-size: 12px;
    }
</style>

@if (TempData["DeniedMessage"] != null)
{
    <div class="alert alert-danger mt-3 text-center">@TempData["DeniedMessage"]</div>
}
else
{
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="UpdatedService.Name">Service Name:</label>
            <!-- Display Service.Name in the input -->
            <input asp-for="UpdatedService.Name" placeholder="Service Name" required />
            <span asp-validation-for="UpdatedService.Name" class="text-danger"></span>

            <!-- Type -->
            <div class="form-group">
            <label asp-for="UpdatedService.Type">Service Type:</label>
            <input asp-for="UpdatedService.Type" placeholder="Service Type" required />
            <span asp-validation-for="UpdatedService.Type" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
            <label asp-for="UpdatedService.Price">Service Price:</label>
            <input asp-for="UpdatedService.Price" placeholder="Price" required type="number" step="0.01" />
            <span asp-validation-for="UpdatedService.Price" class="text-danger"></span>
            </div>

            <!-- Description -->
             <div class="form-group">
            <label asp-for="UpdatedService.Description">Service Description:</label>
            <textarea asp-for="UpdatedService.Description" placeholder="Description" required></textarea>
            <span asp-validation-for="UpdatedService.Description" class="text-danger"></span>
            </div>

            <!-- Duration -->
             <div class="form-group">
                <label asp-for="UpdatedService.TimeService">Duration (in minutes):</label>
            <input asp-for="UpdatedService.TimeService" placeholder="Duration (in minutes)" required type="number" />
            <span asp-validation-for="UpdatedService.TimeService" class="text-danger"></span>
            </div>

            <!-- image -->
              <div class="form-group">
            <input asp-for="UpdatedService.ServiceImage" type="file" class="form-control" required aria-label="Service Image" />
            <span asp-validation-for="UpdatedService.ServiceImage" class="text-danger"></span>
            </div>
            
        </div>
        <button type="submit">Save Changes</button>
        <a asp-page="/Services/Index" class="btn-cancel">Cancel</a>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
}
