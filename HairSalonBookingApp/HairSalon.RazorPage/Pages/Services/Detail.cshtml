@page
@model HairSalon.RazorPage.Pages.Service.DetailModel
@{
    ViewData["Title"] = "Service Details";
}

<style>
    /* General Page Styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #3f51b5;
        border-bottom: 2px solid #3f51b5;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    /* Details Container Styling */
    .details-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto 20px;
    }

        .details-container p {
            font-size: 16px;
            line-height: 1.6;
        }

            .details-container p strong {
                color: #3f51b5;
            }

    /* Button Styling */
    .btn-container {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn {
        padding: 10px 20px;
        color: #ffffff;
        background-color: #3f51b5;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.3s ease;
        display: inline-block;
        text-align: center;
    }

        .btn:hover {
            background-color: #2c3e91;
        }
</style>

@if (TempData["DeniedMessage"] != null)
{
    <div class="alert alert-danger mt-3 text-center">@TempData["DeniedMessage"]</div>
}
else
{
    <h2>@ViewData["Title"]</h2>

    <div class="details-container">
        <p><strong>Service ID:</strong> @Model.ServiceDetail.Id</p>
        <p><strong>Service Name:</strong> @Model.ServiceDetail.Name</p>
        <p><strong>Service Type:</strong> @Model.ServiceDetail.Type</p>
        <p><strong>Service Price:</strong> @Model.ServiceDetail.Price</p>
        <p><strong>Service Description:</strong> @Model.ServiceDetail.Description</p>
        <p><strong>Service TimeService:</strong> @Model.ServiceDetail.TimeService</p>
        <p><strong>Service Image:</strong></p>
        <img src="@Model.ServiceDetail.ServiceImage" alt="Service Image" style="max-width: 100%; height: auto; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);" />

        <!-- Include other fields if needed -->
    </div>

    <div class="btn-container">
        <a asp-page="/Services/Update" asp-route-id="@Model.ServiceDetail.Id" class="btn">Update Service</a>
        <a asp-page="/Services/Index" class="btn">Back to Service List</a>
    </div>
}

