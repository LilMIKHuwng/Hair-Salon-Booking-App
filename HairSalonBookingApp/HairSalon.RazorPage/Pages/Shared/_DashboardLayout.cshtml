<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="~/css/Dashboard/dashboard.css">
	<link rel="stylesheet" href="~/css/Dashboard/responsive.css">
</head>

<body>
	<header style="display: flex">
		<div class="logosec">
			<div class="logo">Hair Salon</div>
		</div>

		<div class="searchbar">
			<input type="text" placeholder="Search">
			<div class="searchbtn">
				<img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210180758/Untitled-design-(28).png" class="icn srchicn" alt="Search Icon">
			</div>
		</div>

		<div class="message" style="padding-right: 5%">
			<div class="dp">
				<a class="nav-link text-dark" asp-area="" asp-page="/AdminPage/AdminProfilePage">
					<img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210180014/profile-removebg-preview.png" class="dpicn" alt="User Profile">
				</a>
			</div>
		</div>
	</header>

	<div class="main-container">
		<div class="navcontainer">
			<nav class="nav">
				<div class="nav-upper-options">
					<a class="nav-link text-dark" asp-area="" asp-page="/AdminPage/RoleManagementModel">
						<div class="nav-option" onclick="toggleOption(this)">
							<img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183322/9.png" class="nav-img" alt="Role">
							<h3 style="text-decoration: none">Manage Roles</h3>
						</div>
					</a>

					<a class="nav-link" href="#">
						<div class="nav-option" onclick="toggleOption(this)">
							<img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183320/5.png" class="nav-img" alt="Report">
							<h3 style="text-decoration: none">Manage Users</h3>
						</div>
					</a>
					<a class="nav-link" href="@Url.Page("/")">
						<div class="nav-option" onclick="toggleOption(this)">
							<img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/6.png" class="nav-img" alt="Institution">
							<h3 style="text-decoration: none">Manage Services</h3>
						</div>
					</a>
					<div class="nav-option logout" onclick="toggleOption(this)">
						<img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/7.png" class="nav-img" alt="Logout">
						<h3>Logout</h3>
					</div>
				</div>
			</nav>
		</div>
		<div class="main">
			@RenderBody()
		</div>
	</div>
</body>
</html>
